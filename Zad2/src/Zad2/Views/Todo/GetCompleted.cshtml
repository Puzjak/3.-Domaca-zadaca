@using Models
@model System.Collections.Generic.List<Models.TodoItem>

<!DOCTYPE html>

<html>


<head>
    <title>Completed Todos</title>
    <style type="text/css">
        .bb {
            border-bottom: solid 1px black;
        }
    </style>
</head>

<body>
    <h1>Active Todo</h1>
    @if (Model.Count == 0)
    {
        <p>
            <b>There are no active todos.</b>
        </p>
    }
    else
    {
        <a asp-action="Index">Return home</a>
        <table>
            @foreach (var item in Model)
            {
                <tr class="bb">
                    <td>
                        <p>
                            <br/>
                            <b>@item.Text</b><br/>
                            @item.DateCompleted<br/>
                            <a asp-action="Remove" asp-route-todoId="@item.Id">Delete todo</a><br/>
                        </p>
                    </td>
                </tr>
            }
        </table>
    }
</body>

</html>
